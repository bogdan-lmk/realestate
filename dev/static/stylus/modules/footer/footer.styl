footer
  flex 0 0 auto
  background-color #000000

.footer-content
  display flex
  padding-top 95px
  padding-bottom: 110px
  justify-content: space-between
.contact-us--footer
  display flex
  flex-direction column
  width: 305px
  max-height: 100%

.footer-link-heading
  text-transform uppercase
  margin-bottom 40px
  color whiteColor
  position relative
  &:after
    content ''
    width: 40px
    height: 1px
    background: whiteColor
    position: absolute
    left: 0
    bottom: -10px

.footer-link
  color: whiteColor

.footer-link-contact-us
  color: whiteColor
  font-weight: 300
  font-size: rem(14px)
  padding-left: 35px
  position: relative
  margin-bottom: 30px

.footer-link-contact-us--icon-envelope
    margin-bottom: 5px
    &:before
      content: ''
      width: 18px
      height: 18px
      background: url("../img/general/envelope.svg")
      position: absolute
      left: 0
      bottom: 0
.footer-link-contact-us--icon-phone
    margin-bottom: 5px
    &:before
      content: ''
      width: 18px
      height: 18px
      background: url("../img/general/phone.svg")
      position: absolute
      left: 0
      bottom: 0
.footer-link-contact-us--icon-location
    margin-bottom: 5px
    &:before
      content: ''
      width: 18px
      height: 18px
      background: url("../img/general/locate.svg")
      position: absolute
      left: 0
      bottom: 0

.footer-link--main
  text-transform: capitalize

.footer-li
  margin-bottom: 20px
  &:last-child
    margin-bottom: 0

.footer-link-join
  width: 305px
.newsletter-text
  font-size: rem(14px)
  font-weight: 300
  color: whiteColor
  line-height: 24px
  margin-bottom: 30px
.footer-link-row
    display: flex
    
.form-for-join
  margin-bottom: 30px

.input-join
  width: 75%
  line-height: 41px
  height: 45px
  font-size: 0.875rem
  padding-left: 10px
  font-weight: 300
  border-top-left-radius: 5px
  border-bottom-left-radius: 5px
  border: 1px solid #cfd8dc

.social-link
  margin-right: 25px
  width: 25px
  height: 25px
  &:last-child
    margin-right: 0
.socials
  width: 25px
  height: 25px
  fill: whiteColor
  &:hover
    fill: blueColor
    transition: all 0.3s ease-in-out

.copyright
  display: flex
  width: 100%
  padding-bottom: 20px
  color: #828282
  font-size: rem(13px)
  justify-content: center
  align-items: center

.copyright-link
    color: blueColor
    font-size: rem(13px)
