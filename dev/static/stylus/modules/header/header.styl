.container
  display flex
  padding 0 7%
  flex-direction column

.header-top
  display flex
  padding 15px 0
  border-bottom 1px solid #ecf0f1
  justify-content space-between

.contact-info
  font-family 'Montserrat Light'
  font-size rem(14)
  color #6a747e
  display flex
  width 30%


.contacts
  position relative
  display flex

.contact-info__pnumber
  margin-right 10%
  margin-left 5%

.icon-contacts
  width 12px
  height 12px
  fill #2c3e50
  display flex
  position absolute
  left -20px
  top 3px

.select-lang
  display flex
  position relative
.select-language
  background url('../img/general/down-arrow-lang.svg') no-repeat
  background-position right center
  display flex
  border none
  appearance none
  width 40px
  color darkBlueColor
.en-lang
    color darkBlueColor
    position relative
    margin 0 2%
    text-transform uppercase

.icon-lang
  display flex
  position absolute
  left -25px
  top 0

.icon-uk
  width 18px
  height 18px

.icon-d-arrow
  width 8px
  height 8px
  left: 27px
  top: 6px

.header-bottom
  display flex
  justify-content space-between
  align-items center
  padding 45px 0

.navigation
  display flex
  justify-content space-between
  align-items center
  width 60%
  a
    font-family mainFont
    text-transform uppercase
    color darkBlueColor
    font-weight 700
    &:hover
      color blueColor
      transition 0.3s ease-in-out

.navigation-elment
  margin-right 5%


.mobile-menu
  position fixed
  z-index 99
  width 100%
  max-width 100%
  height 100%
  top 0
  left 0
  background #E5E5E5
  transform: translateX(100%)
  transition: 0.5s ease

.mobile-menu--active
    transform: translateX(0)

.navigation-mobile
  position absolute
  top 15%
  right 5%
  li
    margin-bottom 5%
  a
    font-family mainFont
    text-transform uppercase
    color darkBlueColor
    font-weight 700
    font-size 28px
    &:hover
      color blueColor
      transition 0.3s ease-in-out
.mobile-hamburger
  position absolute
  right 5%
  top 8%
